{
  "name": "wholesale-market-server",
  "version": "1.0.0",
  "description": "Wholesale Market Backend API - Express.js Server",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "PORT=5000 nodemon --exec \"npx tsx server.ts\"",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "data:import": "node --loader ts-node/esm seeder.ts",
    "data:destroy": "node --loader ts-node/esm seeder.ts -d",
    "import:products": "node --loader ts-node/esm dataImporter.ts import",
    "update:images": "node --loader ts-node/esm imageUpdater.ts update-images",
    "seed:categories": "node --loader ts-node/esm seeders/categorySeeder.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "api",
    "ecommerce",
    "wholesale",
    "express",
    "mongodb"
  ],
  "author": "Wholesale Market Team",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.8.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.8.1",
    "@types/supertest": "^2.0.16",
    "@types/xlsx": "^0.0.36",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
